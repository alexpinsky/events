<div class="page-wrapper contact-us">
  <div class='contact-container'>
    <div class='contact-logo'></div>
    <div class='contact-header'>
      contact us
    </div>
    <div class='contact-text'>
      hey there! please leave us a detailed message and we promise not to play hard to get.
    </div>
    <div class='form-wrapper'>
      <%= form_for @contact_request do |contact_form| %>
        <%= contact_form.email_field :email, class: 'email-input shadow', placeholder: 'Email' %>
        <%= contact_form.text_area   :message %>
        <%= contact_form.submit %>
      <% end %>
    </div>
  </div>
</div>