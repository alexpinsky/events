<% if event %>
  <meta property="og:title" content="<%= event.name %>" />
  <meta property="og:image" content="<%= event.pictures.first.url %>" />
  <meta property="og:site_name" content="<%= ENV['ROOT_URL'] %>" />
  <meta property="og:url" content="<%= event.full_url %>" />
  <meta property="og:description" content="<%= "#{event.name} #{time_format(event.start_time)} #{event.location}" %>" />
<% end %>