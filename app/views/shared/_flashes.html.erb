<% content_for :javascript do %>
  <script type="text/javascript">
    $(document).ready(function() {
      <% flash.keys.each do |k| %> 
        <% if flash[k].is_a? String %>
          Helpers.displayAlert("<%= flash[k] %>", "<%= k %>")
        <% else %>
          <% flash[k].each do |msg| %>
            Helpers.displayAlert("<%= flash[k] %>", "<%= k %>")
          <% end %>   
        <% end %>
      <% end %>   
      $(document).foundation();
    })
  </script>
<% end %>