<div class="wedding classic event-wrapper" style="background-image: url(<%= background_collection_url(event.background_image) %>)">
  <div class='row'>
    
  <div class='theme-wrapper small-12 columns'>
    <img id='pic-1' class="main" src="<%= image_url(event, 1) %>" />
    <div class='graphics-wrapper small-8 columns'>
      <div class='row'>
        <div class='text-wrapper small-6 small-offset-3 columns'>
          <div class="text-1-wrapper row">
            <div id="text_1" style="font-family: <%= event.font_family_1 %>;color: <%= event.font_color_1 %>; font-size: <%= event.font_size_1 %>;"><%= event.text_1 %></div>
          </div>
          <div class="text-2-wrapper row">
            <div id="text_2" style="font-family: <%= event.font_family_2 %>;color: <%= event.font_color_2 %>; font-size: <%= event.font_size_2 %>;"><%= event.text_2 %></div>
          </div>
          <div class="text-3-wrapper row">
            <div id="text_3" style="font-family: <%= event.font_family_3 %>;color: <%= event.font_color_3 %>; font-size: <%= event.font_size_3 %>;"><%= event.text_3 %></div>
          </div>
        </div>
      </div>
      <div class='row'>
        <div class='text-wrapper-border small-6 small-offset-3 columns'>
          <div class='left small-3 columns'></div>
          <div class='right small-3 columns'></div>
        </div>
      </div>
      <div class='row'>
        <div class='decoration-wrapper small-12 columns'>
          <div class='left small-6 columns'>
            <img class="l" src="<%= aws_asset_url(event, 'decoration-left') %>">
          </div>
          <div class='right small-6 columns'>
            <img class="r" src="<%= aws_asset_url(event, 'decoration-left') %>">
          </div>
        </div>
      </div>
      <div class='row'>
        <div class="calendar-wrapper" style="visibility
    : <%= event_visibility(event) %>">
          <%= render partial: 'themes/shared/calendar', locals: { event: event } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>