<% if event %>
  <meta property="og:title" content="<%= event.name %>" />
  <% event.pictures.each do |pic| %>
    <meta property="og:image" content="<%= pic.image_url %>" />
  <% end %>
  <meta property="og:site_name" content="eventit.com/<%= event.url %>" />
  <meta property="og:url" content="webivte.com/<%= event.url %>" />
  <meta property="og:description" content="<%= "#{event.name} #{event.start_time.try(:strftime, '%F')} #{event.location}" %>" />
<% end %>