<div class='form'>
<%= form_for event, remote: true do |event_form| %>
  <%= event_form.hidden_field :theme_id %>
  <%= event_form.hidden_field :category_id %>
  <%= event_form.hidden_field :name %>
  <div class='accordion'>
    <div class='panel panel-1 templates' data-name='templates'>
      <div class='panel-header'>
        <div class='header-icon vertical-align'></div>
        <div class='header-text'>templates</div>
      </div>
      <div class='panel-content'>
        <%= render partial: "events/editor/gallery", locals: { categories: @categories } %>
      </div>
    </div>
    <%= event_form.fields_for :appearance, event.appearance do |app_form| %>
      <%= app_form.hidden_field :background_image, id: "background-image" %>
      <div class='panel panel-2 text' data-name='text'>
        <div class='panel-header'>
          <div class='header-icon vertical-align'></div>
          <div class='header-text'>text</div>
        </div>
        <div class='panel-content'>
          <%= render partial: "events/editor/text_edit", locals: {
            event_form: event_form,
            app_form: app_form,
            event: event
          } %>
        </div>
      </div>
      <div class='panel panel-3 pictures' data-name='pictures'>
        <div class='panel-header'>
          <div class='header-icon vertical-align'></div>
          <div class='header-text'>background & pics</div>
        </div>
        <div class='panel-content'>
            <%= render partial: "events/editor/background_and_pics", locals: {
                event_form: event_form,
                app_form: app_form,
                event: event
              }
            %>
        </div>
      </div>
    <% end %>
    <%= event_form.fields_for :information, event.information do |info_form| %>
      <div class='panel panel-4 calendar' data-name='calendar'>
        <div class='panel-header'>
          <div class='header-icon vertical-align'></div>
          <div class='header-text'>sync calendar</div>
        </div>
        <div class='panel-content'>
          <%= render partial: "events/editor/information", locals: {
              event_form: event_form,
              info_form: info_form,
              event: event
            }
          %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
</div>