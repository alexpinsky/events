<div class='admin-wrapper admin-contact-requests'>
  <div class='table-wrapper'>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Email</th>
          <th>Message</th>
          <th>Created At</th>
          <th>ID</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @requests.each_with_index do |request, i| %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= request.email %></td>
          <td><%= request.message.truncate(40) %></td>
          <td><%= request.created_at.strftime("%d/%m/%Y") %></td>
          <td><%= request.id %></td>
          <td><%= link_to 'show', admin_contact_request_path(request) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>